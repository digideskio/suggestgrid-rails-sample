<div class="col-md-12">
  <div class="row">
    <div class="col-md-9">
      <div class="row movie">
        <h3><%= @movie[:movie].title %></h3>
        <hr>
        <div class="col-md-4">
          <%= image_tag @movie[:movie].poster_path %>
        </div>
        <div class="col-md-8">
          <p><%= @movie[:movie].overview %></p>
          <p>  <%= @movie[:movie].genres.join(',') %></p>
          <p>  <%= @movie[:movie].release_date %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h4>Recommended Similar Movies</h4>
          <hr>
          <% @movie[:recommended_similar].each_slice(3).each do |group| %>
              <div class="row">
                <% group.each do |movie| %>
                    <div class="col-sm-3 col-lg-3 col-md-3">
                      <%= render 'movie', {movie: movie, overview: false} %>
                    </div>
                <% end %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <h3>Similar Movies</h3>
      <hr>
      <% @movie[:similar].each do |movie| %>
          <div class="row">
            <div class="col-sm-12 col-lg-12 col-md-12">
              <%= render 'movie', {movie: movie, overview: false} %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
